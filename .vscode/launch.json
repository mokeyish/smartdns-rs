{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'smartdns'",
      "cargo": {
        "args": [
          "build",
          "--bin=smartdns",
          "--package=smartdns",
          // "--features=future-diagnostic"
        ],
        "filter": {
          "name": "smartdns",
          "kind": "bin"
        }
      },
      "args": [
        "run",
        "-d", "./etc/smartdns",
        // "-c", "etc/smartdns/smartdns.conf",
        "-c", "tests/example/smartdns.conf",
        "-p", "./smartdns.pid",
        "-vvvv"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUSTFLAGS": "--cfg tokio_unstable",
        "RUST_LOG": "tokio=trace,runtime=trace",
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug update 'smartdns'",
      "cargo": {
        "args": [
          "build",
          "--bin=smartdns",
          "--package=smartdns"
        ],
        "filter": {
          "name": "smartdns",
          "kind": "bin"
        }
      },
      "args": [
        "update",
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'smartdns'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=smartdns",
          "--package=smartdns"
        ],
        "filter": {
          "name": "smartdns",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
